{
  "name": "sauce-demo",
  "version": "1.0.0",
  "description": "![Playwright](https://img.shields.io/badge/Playwright-Test-green) ![TypeScript](https://img.shields.io/badge/TypeScript-Strict-blue) ![Cucumber](https://img.shields.io/badge/Cucumber-BDD-23d160) ![Node.js](https://img.shields.io/badge/Node.js-18%2B-orange)",
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "test:ui": "npx bddgen && npx playwright test --ui",
    "test:headed": "npx bddgen && npx playwright test --headed",
    "test:debug": "set PWDEBUG=1 && npx bddgen && npx playwright test",
    "test:shard": "npx bddgen && npx playwright test --shard=",
    "test:a11y": "npx bddgen && npx playwright test --grep @accessibility",
    "test:keyboard": "npx bddgen && npx playwright test --grep @keyboard",
    "test:mobile": "npx bddgen && npx playwright test --grep @mobile --project='Mobile Chrome'",
    "test:strict": "set STRICT_CONSOLE=true && npx bddgen && npx playwright test",
    "test:smoke": "npx bddgen && npx playwright test --grep @smoke",
    "test:flaky": "powershell -ExecutionPolicy Bypass -File ./scripts/flaky-test.ps1",
    "test:flaky:report": "powershell -ExecutionPolicy Bypass -File ./scripts/flaky-history.ps1 -Action report",
    "test:quarantine:list": "powershell -ExecutionPolicy Bypass -File ./scripts/quarantine.ps1 -Action list",
    "test:quarantine:run": "powershell -ExecutionPolicy Bypass -File ./scripts/quarantine.ps1 -Action run",
    "test:stable": "npx bddgen && npx playwright test --grep-invert @flaky",
    "test:report": "npx allure generate -o ./allure-report ./allure-results",
    "test:report:open": "npm run test:report && npx allure open ./allure-report",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,ts,json,feature,md}\"",
    "docs:coverage": "powershell -ExecutionPolicy Bypass -File ./scripts/coverage-matrix.ps1"
  },
  "keywords": [],
  "author": "Tien Nguyen Huu",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "allure-playwright": "^3.4.3",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.7.4",
    "prettier-plugin-gherkin": "^3.1.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,json,feature,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
